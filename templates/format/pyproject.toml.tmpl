[build-system]
requires = ["ChimeraX-BundleBuilder"]
build-backend = "chimerax.bundle_builder.cx_pep517"

[project]
name = "{{bundle_name}}"
version = "{{version}}"
description = "{{description}}"
license = { text = "MIT" }
dynamic = ["classifiers", "requires-python"]

[project.urls]
# Homepage = "https://github.com/yourusername/{{bundle_name}}"

[chimerax]
package = "chimerax.{{package_dir}}"
pure = true
min-session-version = 1
max-session-version = 1
categories = ["General"]
classifiers = []

[chimerax.data-format."{{command_name}}"]
category = "General"
nicknames = ["{{command_name}}"]
suffixes = [".{{command_name}}"]
mime-types = ["application/x-{{command_name}}"]
synopsis = "{{description}}"

[chimerax.data-format."{{command_name}}".open]
type = "fetch"
format-name = "{{command_name}}"
is-default = true

